<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    >

    <TextView
        android:id="@+id/fragment_preferences_item_station_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="Norreport"
        android:textSize="@dimen/stations_font_size"
        />

    <LinearLayout
        android:id="@+id/fragment_preferences_item_expanded_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_preferences_item_station_name"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_marginTop="128dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Lorem ipsum"
            android:textSize="@dimen/small_font_size"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/fragment_preferences_item_expand_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_preferences_item_expanded_layout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/small_margin"
        android:src="@drawable/ic_chevron_down_grey600_24dp"
        />

    <ImageButton
        android:id="@+id/fragment_preferences_item_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fragment_preferences_item_expanded_layout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/small_margin"
        android:src="@drawable/ic_delete_grey600_24dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/fragment_preferences_item_notification_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/fragment_preferences_item_expanded_layout"
        android:layout_margin="@dimen/small_margin"
        android:layout_toLeftOf="@id/fragment_preferences_item_expand_btn"
        android:text="No push notifications"
        android:textSize="@dimen/small_font_size"
        />

</RelativeLayout>