<android.support.design.widget.CoordinatorLayout
    android:id="@+id/fragment_preferences_coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oczeretko.dsbforsinket.fragment.PreferencesFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_preferences_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_preferences_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/margin_fab"
        android:src="@drawable/ic_plus_white_24dp"
        app:layout_anchor="@id/fragment_preferences_recycler"
        app:layout_anchorGravity="bottom|center"
        />

</android.support.design.widget.CoordinatorLayout>